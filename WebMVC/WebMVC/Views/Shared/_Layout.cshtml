<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] Gestion de Deposito </title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/AppWeb.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                @if (@Context.Session.GetString("Token") == null)
                {
                    <a class="navbar-brand" asp-area="" asp-controller="Usuarios" asp-action="Login">Gestion de Deposito</a>
                }
                else
                {
                    <a class="navbar-brand" asp-area="" asp-controller="MovimientoStock" asp-action="ListarMovimientosStock">Gestion de Deposito</a>
                }
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1 justify-content-end">
                        @if (@Context.Session.GetString("Token") == null)
                        {
                            <li class="nav-item">
                                <a class="btn btn-success nav-link text-white" asp-area="" asp-controller="Usuarios" asp-action="Login">Ingresar</a>
                            </li>
                        }
                        @if (@Context.Session.GetString("Token") != null)
                        {
                            <li class="nav-item mx-1">
                                <a class="nav-link text-dark" asp-area="" asp-controller="MovimientoStock" asp-action="ListarMovimientosStock">Listar Movimientos de Stock</a>
                            </li>
                            <li class="nav-item mx-1">
                                <a class="nav-link text-dark" asp-area="" asp-controller="MovimientoStock" asp-action="Create">Ingresar Movimiento de Stock</a>
                            </li>
                            <li class="nav-item mx-1">
                                <a class="nav-link text-dark" asp-area="" asp-controller="MovimientoStock" asp-action="ConsultarMovimientosPorArticuloYTipo">Consulta Por Articulo y Tipo Movimiento</a>
                            </li>
                            <li class="nav-item mx-1">
                                <a class="nav-link text-dark" asp-area="" asp-controller="MovimientoStock" asp-action="ConsultarMovimientosPorFecha">Consulta Por Fecha</a>
                            </li>
                            <li class="nav-item mx-1">
                                <a class="nav-link text-dark" asp-area="" asp-controller="MovimientoStock" asp-action="ConsultarResumenAnual">Resumen Anual</a>
                            </li>
                            <li class="nav-item mx-1">
                                <form asp-controller="Usuarios" asp-action="Logout" method="post">
                                    <button type="submit" class="btn btn-danger nav-link text-white">Cerrar sesión</button>
                                </form>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container-fluid text-center">
            Pablo Dos Santos 287048
            &copy; 
            Rodrigo Suárez 303425
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
